{% extends "base.njk" %}

{# To insert content into the head, use the headEnd block #}
{# (If you wanted to replace the entire head, you could use the headOutside block) #}
{% block title %}gulp-nunjucks-sass-template{% endblock %}
{% block headEnd %}
    {# Nunjucks will escape unsafe content such as HTML tags,
       but we don't want that. This is why it is piped into "safe" (just like scripts below) #}
    {{ tags.css | safe }}
{% endblock %}

{# The bodyOutside block will replace the entire <body></body> tag.
   For more on available blocks, see "templates/base.njk" #}
{% block bodyOutside %}
<body class="page--index container">
    <div class="container__child center-horizontal center-vertical">
        <h1><u>gulp-nunjucks-sass-template</u></h1>
        <div>
            {# For variable and filter configuration, see "tasks/configuration.ts" #}

            {# turns into "bar" (just a custom variable example) #}
            <div>Let's replace the variable <i>foo</i>: <b>{{ foo }}</b></div>

            {# Shortens the left side to n characters (just a custom filter example) #}
            <div>Let's shorten the lorem ipsum text: <b>{{ "Lorem ipsum dolor sir amet." | shorten(11) }}</b></div>

            <a href="bones.html">Check out <b>Bones</b> documentation</a>
        </div>
    </div>

    {# Inserting ready-made script tags can be done like this:
       This will load the complete script tag for the index.ts entry point.
       Useful for loading only scripts you need on a specific page. #}
    {{ tags.scripts.index | safe }}
</body>
{% endblock %}
