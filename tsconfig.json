{
  "include": [
    "src/**/*.ts",
    "tasks/**/*.ts"
  ],
  "exclude": [
    "src/**/*.scss",
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // Transformation is done using webpack and Babel
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@": ["./src/*"],
      "@SCSS": ["./src/scss/*"],
      "@SCRIPTS": ["./src/scripts/*"]
    }
  }
}
